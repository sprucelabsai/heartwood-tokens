{
  "source": [
    "properties/**/*.json",
    "properties/**/*.js"
  ],
  "platforms": {
    "figma": {
      "transformGroup": "figma",
      "buildPath": "build/figma/",
      "files": [
        {
          "destination": "figma-color-styles.json",
          "format": "figma/color",
          "filter": "figma/color-styles"
        },
        {
          "destination": "figma-font-styles.json",
          "format": "figma/font-style",
          "filter": "figma/font-styles"
        }, {
          "destination": "../js/tokens-figma.js",
          "format": "javascript/module",
          "filter": "figma/color-styles"
        }
      ]
    },
    "scss": {
      "transformGroup": "heartwood/scss",
      "buildPath": "build/scss/",
      "files": [
        {
          "destination": "_tokens.scss",
          "format": "scss/map-multi",
          "mapPrefix": "hw",
          "filter": "tokens"
        },
        {
          "destination": "_components.scss",
          "format": "scss/map-multi",
          "mapPrefix": "hw",
          "filter": "components"
        },
        {
          "destination": "../js/tokens-scss.js",
          "format": "javascript/module",
          "filter": "tokens"
        },
        {
          "destination": "../js/components-scss.js",
          "format": "javascript/module",
          "filter": "components"
        }
      ]
    },
    "android": {
      "transformGroup": "android",
      "buildPath": "build/android/",
      "files": [
        {
          "destination": "font_dimens.xml",
          "format": "android/fontDimens"
        },
        {
          "destination": "colors.xml",
          "format": "android/colors"
        }, 
        {
          "destination": "../js/tokens-android.js",
          "format": "javascript/module",
          "filter": "tokens/android"
        }
      ]
    },
    "ios-swift": {
      "transformGroup": "ios-swift",
      "buildPath": "build/ios-swift/",
      "files": [
        {
          "destination": "StyleDictionary.swift",
          "format": "ios-swift/class.swift",
          "className": "StyleDictionary",
          "filter": {}
        }, 
        {
          "destination": "../js/tokens-ios-swift.js",
          "format": "javascript/module",
          "filter": "tokens/ios"
        }
      ]
    },
    "ios-swift-separate-enums": {
      "transformGroup": "ios-swift-separate",
      "buildPath": "build/ios-swift/",
      "files": [
        {
          "destination": "StyleDictionaryColor.swift",
          "format": "ios-swift/enum.swift",
          "className": "StyleDictionaryColor",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        },
        {
          "destination": "StyleDictionarySize.swift",
          "format": "ios-swift/enum.swift",
          "className": "StyleDictionarySize",
          "type": "float",
          "filter": {
            "attributes": {
              "category": "size"
            }
          }
        }
      ]
    },
    "js": {
      "transforms": [
        "attribute/cti",
        "name/cti/pascal",
        "size/pxToRem",
        "color/hex",
        "asset/base64"
      ],
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "tokens.js",
          "format": "javascript/module",
          "filter": "tokens"
        },
        {
          "destination": "assets-base64.js",
          "format": "javascript/module",
          "filter": {
            "attributes": {
              "category": "asset"
            }
          }
        }
      ]
    }
  }
}